<div class='text-center'>
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p><i>Written by {{user.name}} on {{format_date date_created}}</i></p>
  <h2>Add Comment</h2>
  {{#each comments as |comment|}}
    <p>{{comment.message}}
      <span class='text-info'>
        Submitted by
        {{comment.user.name}}
        on
        {{format_date comment.date_created}}</span>
    </p>
  {{/each}}
  <form class='form new-post-form'>
    <div class='form-group'>
      <label for='comment-desc'></label>
      <input value='{{id}}' type='hidden' name='post_id' />
      <textarea
        placeholder='Type your comment here...'
        class='form-input'
        id='comment-desc'
        name='comment-desc'
      ></textarea>
    </div>

    <div class='form-group'>
      <button type='submit' class='btn btn-style'>Post comment</button>
    </div>
  </form>
  {{#each comments as |comment|}}
    <div>{{comment.title}}</div>
  {{/each}}
  {{#if logged_in}}
    <form class='form new-post-form' data-id='{{id}}'>
      <div class='form-group'>
        <label for='comment-desc'>Add a Comment:</label>
        <input value='{{id}}' type='hidden' name='post_id' />
        <textarea
          class='form-input'
          type='text'
          id='comment-desc'
          name='comment-desc'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-style'>Post comment</button>
      </div>
    </form>
  {{else}}
    <h3 class='new-post-form text-info'>Login to submit comments</h3>
  {{/if}}
</div>

<script src='../js/post.js'></script>