<div class='m-a mb-4 text-center'>
  <h2>{{name}}</h2>
  <p class='post-weight'>{{description}}</p>
  <p>Written by {{user.name}} on {{format_date date_created}}</p>
  {{#each comments as |comment|}}
    <div>
      <p class=''>{{comment.message}}
        <div>{{comment.title}}</div>
        <div class='a-white mb-4 text-info'>Submitted by
          {{user.name}}
          on
          {{format_date comment.date_created}}</div>
      </p>
    </div>
  {{/each}}

  {{#if logged_in}}
    <form class='form new-comment-form' data-id='{{id}}'>
      <div class='form-group'>
        <label for='comment-desc'>Add a Comment:</label>
        <input value='{{id}}' type='hidden' name='post_id' />
        <textarea
          class='form-input'
          type='text'
          id='comment-desc'
          name='comment-desc'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn-style'>Post comment</button>
      </div>
    </form>
  {{else}}
    <h3 class='new-comment-form text-info'>Login to submit comments</h3>
  {{/if}}
</div>

<script src='../js/comment.js'></script>